#include<stdio.h>
#include<conio.h>
void main()
{
clrscr();
int n,i,j,k;
printf("\n enter n");
scanf("%d",&n);

for(i=1;i<=n+2;i++)
{
 if(i==1)
 {
  for(j=1;j<=n+2;j++)

  if(j<=n+1)
  {
  printf(" *");
  }
  else
  {
  printf(" *");

  }
 }
 if(i==n+2)
 {
  for(j=1;j<=n+2;j++)
  if(j<=n+1)
  {
  printf(" *");
  }
  else
  {
  printf(" *");
  }
 }
 if(i>1)
 if(i<n+2)
 {
  for(j=1;j<=n+3;j++)
  {
   if(j==1)
   {
    printf(" *");
   }
   if(j==n+2)
   {
    printf(" *");
   }
   if(j==n+3)
   {
   printf("");
   }
   if(j>1)
   if(j<n+2)
   {
    if(i%2==0)
    {
     if(j==2)
     {
      for(k=1;k<=n;k++)
      {
       printf(" %d",k);
      }
     }
    }
    if(i%2==1)
    {
     if(j==2)
     {
      for(k=n;k>=1;k--)
      printf(" %d",k);
     }
    }
   }
  }
 }
printf("\n");
}
getch();
}
